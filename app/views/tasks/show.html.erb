<h1><%= @task.title %></h1>
<h3>Description</h3>
<p><%= @task.details %></p>
<h3>Status</h3>
<p><%= @task.completed ? "Done" : "Not yet done" %></p>
<%= link_to "Back to task list", tasks_path %>
<%= link_to "Edit this task", edit_task_path %>
<%= link_to "Delete this task",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task (#{@task.title})?"}
%>
